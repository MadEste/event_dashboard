<div class="container">
	<h1>
	  <%= @event.name %>
	</h1>

	<h4>
	  <%= @event.description %>
	</h4>
	<div class="row">
		<% @event.links.each do |link| %>
			<div class="col-sm-6 col-md-3">
				<%= link_to link.label, link.url, target: "_blank", class: "btn btn-default btn-lg" %>
			</div>
		<% end %>
	</div>
	<%= link_to 'Edit', edit_event_path(@event) %> |
	<%= link_to 'Back', events_path %>
</div>