<h1 align="center">My Events</h1>

<% @events.each do |event| %>
  <div class="row">
    <div class="col-md-6">
      <h4><%= event.name %></h4>
    </div>
    <div class="col-md-2">
      <h4><%= link_to 'Show', event %></h4>
    </div>
    <div class="col-md-2">
      <h4><%= link_to 'Edit', edit_event_path(event) %></h4>
    </div>
    <div class="col-md-2">
      <h4><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></h4>
    </div>
  </div>
<% end %>

<br>

<%= link_to 'New Event', new_event_path, class: "btn btn-default btn-lg" %>
