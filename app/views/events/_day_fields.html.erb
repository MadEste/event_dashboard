<div class="nested-fields">
	<div class="form-inline">
		<%= f.input :date, date_select: { class: "form-input form-control" } %>
		<%= link_to_remove_association "Remove", f, class: "form-button btn btn-default" %>
	</div>
	<br>
	<%= f.simple_fields_for :dayevents do |devent| %>
		<%= render 'dayevent_fields', f: devent %>
	<% end %>

	<div class="links" style="margin-left: 60px;">

		<%= link_to_add_association 'Add Event', f, :dayevents, class: "btn btn-default btn-sm add-button" %>
	</div>
	<hr>		
</div>